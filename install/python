#!/usr/bin/env zsh

# Install poetry
curl -sSL https://install.python-poetry.org | python3 -

# Install pyenv
brew install pyenv
echo 'export PYENV_ROOT="$HOME/.pyenv"' >> ~/.zshrc
echo 'command -v pyenv >/dev/null || export PATH="$PYENV_ROOT/bin:$PATH"' >> ~/.zshrc
echo 'eval "$(pyenv init -)"' >> ~/.zshrc

# Install Anaconda
# https://www.anaconda.com/download/
#
# Install Kivy
# https://kivy.org/doc/stable/installation/installation-osx.html#using-homebrew-with-pip
#
# brew install pkg-config
# xcode-select --install
#
# Use pip?
# python -m pip install "kivy[base]"
# brew install glpk
#
# Use miniconda3?
#
# mkdir -p ~/miniconda3
# curl https://repo.anaconda.com/miniconda/Miniconda3-latest-MacOSX-arm64.sh -o ~/miniconda3/miniconda.sh
# bash ~/miniconda3/miniconda.sh -b -u -p ~/miniconda3
# rm ~/miniconda3/miniconda.sh

pip install pipreqs pipdeptree
# pipreqs ./  # Generates a minimal requirements.txt for the project
# pipdeptree --warn silence > dependency_tree.txt

curl -LsSf https://astral.sh/uv/install.sh | sh

python -m pip install -U aider-chat

# # Change directory into a git repo
# cd /to/your/git/repo

# # Work with Claude 3.5 Sonnet on your repo
# export ANTHROPIC_API_KEY=your-key-goes-here
# aider

# # Work with GPT-4o on your repo
# export OPENAI_API_KEY=your-key-goes-here
# aider 
