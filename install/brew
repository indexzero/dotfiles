#!/bin/zsh

# Homebrew installation and setup script
# Uses Brewfiles organized by concern in brew.d/

set -e

echo "Setting up Homebrew and installing packages..."

# Check if Homebrew is installed
if ! command -v brew &> /dev/null; then
    echo "Installing Homebrew..."
    /bin/bash -c "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/HEAD/install.sh)"

    # Add Homebrew to PATH
    echo 'eval "$(/opt/homebrew/bin/brew shellenv)"' >> $HOME/.zprofile
    eval "$(/opt/homebrew/bin/brew shellenv)"
else
    echo "Homebrew is already installed"
fi

# Update Homebrew
echo "Updating Homebrew..."
brew update

# Get the directory of this script
SCRIPT_DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"

# Parse command line options
CATEGORY=""
while [[ $# -gt 0 ]]; do
    case $1 in
        --category|-c)
            CATEGORY="$2"
            shift 2
            ;;
        --help|-h)
            echo "Usage: $0 [options]"
            echo "Options:"
            echo "  --category, -c <category>  Install specific category (dev, cli, vcs, etc.)"
            echo "  --help, -h                 Show this help message"
            echo ""
            echo "Categories:"
            echo "  dev          - Development tools"
            echo "  vcs          - Version control systems"
            echo "  cli          - Command line utilities"
            echo "  docs         - Documentation & visualization"
            echo "  databases    - Database systems"
            echo "  media        - Media processing"
            echo "  system       - System utilities"
            echo "  network      - Network & security"
            echo "  productivity - Productivity apps"
            echo "  terminals    - Terminal emulators"
            echo ""
            echo "Without options, installs everything from all categories."
            exit 0
            ;;
        *)
            echo "Unknown option: $1"
            echo "Use --help for usage information"
            exit 1
            ;;
    esac
done

# Install from Brewfiles
if [[ -n "$CATEGORY" ]]; then
    BREWFILE="$SCRIPT_DIR/brew.d/Brewfile.$CATEGORY"
    if [[ -f "$BREWFILE" ]]; then
        echo "Installing packages from $CATEGORY category..."
        brew bundle --file="$BREWFILE"
    else
        echo "Error: Category '$CATEGORY' not found"
        echo "Available categories: dev, vcs, cli, docs, databases, media, system, network, productivity, terminals"
        exit 1
    fi
else
    echo "Installing all packages from Brewfiles..."
    brew bundle --file="$SCRIPT_DIR/brew.d/Brewfile"
fi

echo "Installation complete!"
echo ""
echo "To install specific categories only, run:"
echo "  $0 --category dev"
echo "  $0 --category cli"
echo "  etc."
echo ""
echo "Database services notes:"
echo "  MySQL: brew services start mysql"
echo "  PostgreSQL: brew services start postgresql"
echo "  MongoDB: brew services start mongodb/brew/mongodb-community"