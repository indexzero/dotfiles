[user]
  name = indexzero
  email = charlie.robbins@gmail.com
[color]
  diff = auto
  status = auto
  branch = auto
  interactive = auto
  ui = true
  pager = true
[color "status"]
  added = green
  changed = yellow
  untracked = red
[core]
  excludesfile = ~/.gitignore
  pager = diff-so-fancy | less --tabs=4 -RFX
[alias]
  lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
[includeIf "gitdir:~/Bitbucket/"]
    path = ~/Bitbucket/.gitconfig
[init]
  defaultBranch = main
[pull]
  ff = only
[interactive]
  diffFilter = diff-so-fancy --patch
[color "diff-highlight"]
  oldNormal = red bold
  oldHighlight = red bold 52
  newNormal = green bold
  newHighlight = green bold 22
[color "diff"]
  meta = 11
  frag = magenta bold
  func = 146 bold
  commit = yellow bold
  old = red bold
  new = green bold
  whitespace = red reverse
[alias]
  # commits with a “Co-authored-by: Claude <claude@anthropic.com>” trailer
  cocl = "!f() { git commit \"$@\" --trailer \"Co-authored-by: Claude <claude@anthropic.com>\"; }; f"

  # commits with a “Co-authored-by: Codex <codex@openai.com>” trailer
  coco = "!f() { git commit \"$@\" --trailer \"Co-authored-by: Codex <codex@openai.com>\"; }; f"
