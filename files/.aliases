#
# Some aliases
#
alias nodep='ps axl | grep node'
alias sourcep='source ~/.profile'

# a friendlier delete on the command line
alias emptytrash="find $HOME/.Trash -not -path $HOME/.Trash -exec rm -rf {} \; 2>/dev/null"

# github
alias gh=". ghi"
alias cat="ccat"

# cwd in node. pwd on Linux.
alias cwd="pwd"

# kubernetes
alias k="kubectl"

# git
alias gaa="git add ."
alias gci="git commit"
alias gap="git add -p"
alias gst="git status"
alias gti="git"
alias gita="git pull origin master && git fetch"

# npm
alias cnit="rm -rf node_modules package-lock.json npm-shrinkwrap.json && npm it"
alias cni="rm -rf node_modules package-lock.json npm-shrinkwrap.json && npm i"
alias cnio="rm -rf node_modules package-lock.json npm-shrinkwrap.json && npm i && npm outdated"
alias cnis="rm -rf node_modules package-lock.json npm-shrinkwrap.json && npm i && npm shrinkwrap"

# make
alias maek="make"
alias meak="make"
alias meak="make"

# ssh
alias ssht="ssh -f -N -D 9999 -C"
